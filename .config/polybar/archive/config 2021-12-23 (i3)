[module/memory-mb]
type = custom/script
exec = free -m | sed -n 's/^Mem:\s\+[0-9]\+\s\+\([0-9]\+\)\s.\+/\1/p'
interval = 0.5

format = <label>
format-prefix = "Ô¨ô"

format-underline = ${colors.color15}
format-background = ${colors.dark-light}
format-padding = 1

label = %output% MB
label-padding = 1


